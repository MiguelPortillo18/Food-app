<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_big"
    android:background="#9A00966C"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Buttons -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|end"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                style="@style/font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_wide"
                android:text="TITLE"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- Media -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Description of the card"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo" />

            <TextView
                style="@style/font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_wide"
                android:text="Supporting text fefgewf efefe ggdvdvdsggds gdgsdgsdgdvb xcbsdgdgd gdsgdsvdsgdsg"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginBottom="@dimen/margin_wide"
            android:layout_marginRight="@dimen/margin_wide"
            android:layout_gravity="end"
            android:src="@drawable/ic_add_circle_black" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>